<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation"
            app:startDestination="@id/titleFragment">

    <fragment
            android:id="@+id/titleFragment"
            android:name="com.example.flashcards.view.TitleFragment"
            android:label="FlashCards">
        <action
                android:id="@+id/action_titleFragment_to_wordsFragment"
                app:destination="@id/wordsFragment"/>
    </fragment>
    <fragment
            android:id="@+id/wordsFragment"
            android:name="com.example.flashcards.view.WordsFragment"
            android:label="Ingles">
        <action
                android:id="@+id/action_wordsFragment_to_correctWordFragment"
                app:destination="@id/correctWordFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
        <action
                android:id="@+id/action_wordsFragment_to_wrongWordFragment"
                app:destination="@id/wrongWordFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/correctWordFragment"
            android:name="com.example.flashcards.view.CorrectWordFragment"
            android:label="Ingles"
            tools:layout="@layout/fragment_correct_word">
        <action
                android:id="@+id/action_correctWordFragment_to_titleFragment"
                app:destination="@id/titleFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/wrongWordFragment"
            android:name="com.example.flashcards.view.WrongWordFragment"
            android:label="Ingles"
            tools:layout="@layout/fragment_wrong_word">
        <action
                android:id="@+id/action_wrongWordFragment_to_titleFragment"
                app:destination="@id/titleFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
</navigation>